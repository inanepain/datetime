{
    "name": "inanepain/datetime",
    "description": "Things to help you bend space and time to your will. Or at least do some calculations with it.",
    "type": "library",
    "license": "Unlicense",
    "homepage": "https://github.com/inanepain/datetime",
    "readme": "README.adoc",
    "authors": [
        {
            "name": "Philip Michael Raab",
            "email": "philip@cathedral.co.za",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "philip@cathedral.co.za",
        "issues": "https://github.com/inanepain"
    },
    "keywords": [
        "inanepain",
        "datetime",
        "date",
        "time",
        "timespan",
        "timestamp",
        "duration"
    ],
    "autoload": {
        "psr-4": {
            "Inane\\Datetime\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "discard-changes": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.4",
        "inanepain/stdlib": ">=0.1.6 || dev-master || dev-develop"
    },
    "require-dev": {},
    "scripts": {
        "build": [
            "@build-changelog",
            "@build-readme"
        ],
        "build-changelog": [
            "del CHANGELOG.adoc",
            "asciidoctor-reducer -o CHANGELOG.adoc doc/changelog/index.adoc",
            "asciidoctor -b docbook CHANGELOG.adoc",
            "del CHANGELOG.md",
            "pandoc -f docbook -t markdown_strict CHANGELOG.xml -o CHANGELOG.md",
            "del CHANGELOG.xml"
        ],
        "build-readme": [
            "del README.adoc",
            "asciidoctor-reducer -o README.adoc doc/readme/index.adoc",
            "asciidoctor -b docbook README.adoc",
            "del README.md",
            "pandoc -f docbook -t markdown_strict README.xml -o README.md",
            "del README.xml"
        ]
    }
}
